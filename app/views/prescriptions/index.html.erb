<div class="container footer-margin">
  <div class="row">
    <div class="col-12 col-md-6 col-lg-4">
        <div class="d-flex justify-content-between">
          <h2 id="patient-header">Rechercher une prescription(à revoir)</h2>
        </div>
        <%= simple_form_for :search, url: prescriptions_path, method: :get do |f| %>
          <div class="search-form-control form-group">
             <input class="form-control string required" type="search" name="search" id="search" />
              <button name="button" type="submit" class="btn btn-flat">
                <i class="fas fa-search"></i>
              </button>
          </div>
        <% end %>
        <% if params[:search] %>
          <% if @prescriptions.count > 1 %>
            <p><%= @prescriptions.count %> résultats trouvés</p>
          <% elsif @prescriptions.count == 1 %>
            <p><%= @prescriptions.count %> résultat trouvé</p>
          <% else %>
            <p>Nous n'avons pas trouvé de résultats pour votre recherche</p>
          <% end %>
        <% end %>
      <% @prescriptions.each do |prescription| %>
        <div class="patient-card">
          <%= link_to prescription_path(prescription) do %>
            <div class="patient-card-info">
              <h2>Title : <%= prescription.title %></h2>
              <p>Début : <%= prescription.start_at %></p>
              <p>Fin : <%= prescription.end_at %></p>
              <p>Récurrence : <%= prescription.schedule %></p>
              <p>Patient : <%= prescription.patient.first_name %> <%= prescription.patient.last_name %> </p>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>



